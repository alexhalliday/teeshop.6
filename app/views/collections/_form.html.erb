<%= simple_form_for(@collection) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.association :user %>
    <%= f.input :description %>
    <%= f.input :sold_count %>
    <%= f.input :shirt_names %>
    <%= f.input :url %>
    <%= f.association :shop %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
