<%= simple_form_for(@shop) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.association :user %>
    <%= f.input :base_url %>
    <%= f.input :custom_url %>
    <%= f.input :head_inject %>
    <%= f.input :body_inject %>
    <%= f.input :footer_inject %>
    <%= f.input :favicon %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
