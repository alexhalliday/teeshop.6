<h1>Listing shops</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th>Base url</th>
      <th>Custom url</th>
      <th>Head inject</th>
      <th>Body inject</th>
      <th>Footer inject</th>
      <th>Favicon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.title %></td>
        <td><%= shop.description %></td>
        <td><%= shop.user %></td>
        <td><%= shop.base_url %></td>
        <td><%= shop.custom_url %></td>
        <td><%= shop.head_inject %></td>
        <td><%= shop.body_inject %></td>
        <td><%= shop.footer_inject %></td>
        <td><%= shop.favicon %></td>
        <td><%= link_to 'Show', shop %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shop', new_shop_path %>
