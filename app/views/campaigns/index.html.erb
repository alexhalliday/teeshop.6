<h1>Listing campaigns</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Teespring campaign</th>
      <th>Description</th>
      <th>Collection</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.user %></td>
        <td><%= campaign.teespring_campaign_id %></td>
        <td><%= campaign.description %></td>
        <td><%= campaign.collection %></td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

